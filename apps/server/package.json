{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@neondatabase/serverless": "^1.0.1",
    "@repo/zero": "workspace:*",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "better-auth": "^1.3.13",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "ws": "^8.18.3",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.2",
    "tsdown": "^0.15.1",
    "typescript": "^5.8.2"
  }
}
