{
  "name": "@repo/zero",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./mutators": "./src/mutators.ts",
    "./exports": "./src/exports.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "zero:dev": "pnpm with-env tsx src/scripts/dev.ts",
    "dev:clean": "pnpm with-env tsx src/scripts/clean.ts",
    "dev:db": "pnpm with-env tsx src/scripts/db.ts",
    "dev:zero": "pnpm with-env zero-cache-dev",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "chokidar": "^4.0.3",
    "dotenv-cli": "^8.0.0",
    "drizzle-zero": "^0.14.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@repo/database": "workspace:*",
    "@rocicorp/zero": "^0.23.2025090100",
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.1"
  },
  "turbo": {
    "pipeline": {
      "dev": {
        "persistent": true
      }
    }
  }
}
