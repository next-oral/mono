{
  "name": "@repo/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    },
    "./env": "./src/env.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc && pnpm with-env tsx src/scripts/dev.ts",
    "db:up": "tsc && pnpm with-env tsx src/scripts/db.ts",
    "generate-zero-schema": "pnpm with-env drizzle-zero generate -o ../zero/src/schema/schema.gen.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "pnpm with-env drizzle-kit push",
    "seed": "pnpm with-env tsx src/seed.ts",
    "migrate": "pnpm with-env drizzle-kit generate",
    "studio": "pnpm with-env drizzle-kit studio --verbose",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@upstash/redis": "^1.34.9",
    "drizzle-orm": "^0.44.2",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "ws": "^8.18.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
